{
  "name": "@xrfoundation/volumetric",
  "version": "1.0.4",
  "repository": {
    "type": "git",
    "url": "git://github.com/XRFoundation/Universal-Volumetric.git"
  },
  "exports": {
    "./player": {
      "import": "./dist/player.js"
    },
    "./worker": {
      "default": "./dist/worker.build.es.js"
    },
    ".": {}
  },
  "files": [
    "dist",
    "player.d.ts",
    "worker.d.ts"
  ],
  "npmClient": "yarn",
  "jest": "ts-jest",
  "scripts": {
    "patch-npm": "npm version patch && npm publish --access public",
    "build": "npm run build-player && npm run build-worker",
    "build-player": "tsc",
    "build-worker": "vite build --config vite.worker.config.ts",
    "encode": "babel ./encoder/Encoder.js --out-file corto.js --plugins @babel/plugin-transform-modules-umd",
    "format": "prettier --write \"web/*.{ts,tsx}\"",
    "format-staged": "lint-staged",
    "lint": "prettier --check \"web/*.{ts,tsx}\""
  },
  "pre-commit": [
    "format-staged"
  ],
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write"
    ]
  },
  "author": "XRFoundation",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/XRFoundation/Universal-Volumetric/issues"
  },
  "homepage": "https://github.com/XRFoundation/Universal-Volumetric#readme",
  "devDependencies": {
    "@babel/cli": "7.18.10",
    "@babel/core": "7.19.0",
    "@types/three": "0.144.0",
    "@ianvs/prettier-plugin-sort-imports": "3.3.1",
    "prettier": "2.7.1",
    "typescript": "4.8.2"
  },
  "dependencies": {
    "shelljs": "0.8.5",
    "vite": "^3.0.0",
    "xmlhttprequest": "1.8.0"
  },
  "peerDependencies": {
    "three": ">0.130.0"
  }
}
